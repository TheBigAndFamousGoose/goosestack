# GooseStack API — Environment Variables
# Copy to .env and fill in your values

# Server
PORT=3000

# Provider API keys (our master keys — never expose these)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Stripe
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRO_PRICE_ID=          # Optional: fixed Stripe Price ID for Pro sub

# URLs
CHECKOUT_SUCCESS_URL=https://goosestack.com/billing?success=1
CHECKOUT_CANCEL_URL=https://goosestack.com/billing?cancelled=1
PORTAL_RETURN_URL=https://goosestack.com/billing

# Database (optional — defaults to ./goosestack.db)
# DB_PATH=/var/lib/goosestack/goosestack.db

# Debug
# DB_VERBOSE=1
